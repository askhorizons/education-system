@model PersonalInformationStep
@{
    ViewData["Title"] = "New Application";
    Layout = "~/Views/Shared/_LayoutApplication.cshtml";
}


<!--begin::Step 2-->
<div class="current" data-kt-stepper-element="content">
    <!--begin::Wrapper-->
    <div class="w-100">
        <!--begin::Heading-->
        <div class="pb-10 pb-lg-15 pt-15">
            <!--begin::Title-->
            <h2 class="fw-bolder text-dark">Profile Details</h2>
            <!--end::Title-->
            <!--begin::Notice-->
            <div class="text-gray-400 fw-bold fs-6">
                If you need more info, please check out
                <a href="#" class="link-primary fw-bolder">Help Page</a>.
            </div>
            <!--end::Notice-->
        </div>
        <!--end::Heading-->
        <!--begin::Form-->
        <form class="py-20 w-100 w-xl-700px px-9"
              id="kt-application-form" method="post"
              asp-area="Admin" asp-controller="Candidates" asp-action="Step2">

            @Html.AntiForgeryToken()
            <!--begin::Input group-->
            <div class="mb-10 fv-row">
                <!--begin::Label-->
                <label class="form-label mb-3 required">Name</label>
                <!--end::Label-->
                <!--begin::Input-->
                <input type="text" class="form-control form-control-lg form-control-solid"
                       placeholder="" asp-for="Name" />
                <!--end::Input-->
                <span asp-validation-for="Name" class="text-danger small text-uppercase"></span>

            </div>
            <!--end::Input group-->
            <!--begin::Row-->
            <div class="fv-row mb-10">
                <div class="row">
                    <div class="col-lg-6">
                        <!--begin::Label-->
                        <label class="form-label required">Gender</label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <select class="form-select form-select-lg form-select-solid"
                                data-control="select2" data-placeholder="Select..."
                                data-allow-clear="true" data-hide-search="true"
                                asp-for="GenderId" asp-items="Model.Genders">
                            <option></option>
                        </select>
                        <!--end::Input-->
                        <span asp-validation-for="GenderId" class="text-danger small text-uppercase"></span>
                    </div>
                    <div class="col-lg-6">
                        <!--begin::Label-->
                        <label class="form-label required">Date of birth</label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        @*<input type="text" class="form-control form-control-lg form-control-solid"
                            placeholder="" asp-for="DateOfBirth" />*@
                        @Html.TextBoxFor(model => model.DateOfBirth,
                           "{0:yyyy-MM-dd}",
                           new { @class = "form-control form-control-lg form-control-solid date-picker" })
                        <!--end::Input-->
                        <span asp-validation-for="DateOfBirth" class="text-danger small text-uppercase"></span>

                    </div>
                </div>
            </div>
            <!--end::Row-->
            <!--begin::Actions-->
            <div class="d-flex flex-stack pt-10">
                <!--begin::Wrapper-->
                <div class="mr-2">
                    <a asp-area="Admin" asp-controller="Candidates" asp-action="Step1"
                       class="btn btn-lg btn-light-primary me-3">
                        <!--begin::Svg Icon | path: icons/duotone/Navigation/Left-2.svg-->
                        <span class="svg-icon svg-icon-4 me-1">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <polygon points="0 0 24 0 24 24 0 24" />
                                    <rect fill="#000000" opacity="0.3" transform="translate(15.000000, 12.000000) scale(-1, 1) rotate(-90.000000) translate(-15.000000, -12.000000)" x="14" y="7" width="2" height="10" rx="1" />
                                    <path d="M3.7071045,15.7071045 C3.3165802,16.0976288 2.68341522,16.0976288 2.29289093,15.7071045 C1.90236664,15.3165802 1.90236664,14.6834152 2.29289093,14.2928909 L8.29289093,8.29289093 C8.67146987,7.914312 9.28105631,7.90106637 9.67572234,8.26284357 L15.6757223,13.7628436 C16.0828413,14.136036 16.1103443,14.7686034 15.7371519,15.1757223 C15.3639594,15.5828413 14.7313921,15.6103443 14.3242731,15.2371519 L9.03007346,10.3841355 L3.7071045,15.7071045 Z" fill="#000000" fill-rule="nonzero" transform="translate(9.000001, 11.999997) scale(-1, -1) rotate(90.000000) translate(-9.000001, -11.999997)" />
                                </g>
                            </svg>
                        </span>
                        <!--end::Svg Icon-->Back
                    </a>
                </div>
                <!--end::Wrapper-->
                <!--begin::Wrapper-->
                <div>
                    <button type="submit" class="btn btn-lg btn-primary btn-continue">
                        Continue
                        <!--begin::Svg Icon | path: icons/duotone/Navigation/Right-2.svg-->
                        <span class="svg-icon svg-icon-4 ms-1 me-0">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <polygon points="0 0 24 0 24 24 0 24" />
                                    <rect fill="#000000" opacity="0.5" transform="translate(8.500000, 12.000000) rotate(-90.000000) translate(-8.500000, -12.000000)" x="7.5" y="7.5" width="2" height="9" rx="1" />
                                    <path d="M9.70710318,15.7071045 C9.31657888,16.0976288 8.68341391,16.0976288 8.29288961,15.7071045 C7.90236532,15.3165802 7.90236532,14.6834152 8.29288961,14.2928909 L14.2928896,8.29289093 C14.6714686,7.914312 15.281055,7.90106637 15.675721,8.26284357 L21.675721,13.7628436 C22.08284,14.136036 22.1103429,14.7686034 21.7371505,15.1757223 C21.3639581,15.5828413 20.7313908,15.6103443 20.3242718,15.2371519 L15.0300721,10.3841355 L9.70710318,15.7071045 Z" fill="#000000" fill-rule="nonzero" transform="translate(14.999999, 11.999997) scale(1, -1) rotate(90.000000) translate(-14.999999, -11.999997)" />
                                </g>
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                    </button>
                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Actions-->
        </form>
    </div>
    <!--end::Wrapper-->
</div>
<!--end::Step 2-->

@section Scripts{
    <script>
        $(function () {
            $("#admin-candidates").addClass("active");
            $("#Step2").addClass("current");
            $(".date-picker").flatpickr({
                dateFormat: "Y-m-d",
            });
        });
    </script>
}